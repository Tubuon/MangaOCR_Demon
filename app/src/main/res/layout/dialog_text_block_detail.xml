<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Original Text Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Text"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvOriginalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text_block"
        android:padding="12dp"
        android:textSize="16sp"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <!-- Translation Edit Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation (Edit here)"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="?attr/colorSecondary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:maxLines="8"
        android:gravity="top|start"
        android:background="@drawable/bg_edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:hint="Edit translation here"
        android:inputType="textMultiLine" />

    <!-- Metadata Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Language: Chinese"
            android:textSize="12sp"
            android:textColor="?attr/colorSecondary" />

        <TextView
            android:id="@+id/tvConfidence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confidence: 95%"
            android:textSize="12sp"
            android:textColor="?attr/colorSecondary"
            android:gravity="end" />
    </LinearLayout>

</LinearLayout>