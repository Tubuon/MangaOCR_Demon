<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Manga Cover - THAY BẰNG IMAGEVIEW THƯỜNG -->
        <ImageView
            android:id="@+id/ivMangaCover"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:contentDescription="Manga cover"
            android:background="@drawable/circle_background_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher"/>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/ivMangaCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Title -->
            <TextView
                android:id="@+id/tvMangaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Manga"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="One Piece"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tvMangaDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả manga"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Một câu chuyện phiêu lưu tuyệt vời"/>

            <!-- Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvChapterCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ch"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="15 ch"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="?android:attr/textColorSecondary"/>

                <TextView
                    android:id="@+id/tvPageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 trang"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="320 trang"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>