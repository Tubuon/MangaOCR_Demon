<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="@dimen/spacing_lg">

    <!-- Close Button -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="@dimen/touch_target_min"
        android:layout_height="@dimen/touch_target_min"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Login Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius_lg"
        app:cardElevation="@dimen/card_elevation_lg"
        app:layout_constraintWidth_max="@dimen/login_form_max_width"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xl"
            android:gravity="center">

            <!-- Logo -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivLogo"
                android:layout_width="@dimen/avatar_size_xl"
                android:layout_height="@dimen/avatar_size_xl"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="App logo"
                app:shapeAppearanceOverlay="@style/CircleImageView"/>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textSize="@dimen/text_4xl"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/spacing_lg"
                android:textColor="?android:attr/textColorPrimary"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng nhập để đồng bộ dữ liệu\nvà sao lưu lịch sử dịch"
                android:textSize="@dimen/text_base"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/spacing_sm"
                android:textColor="?android:attr/textColorSecondary"
                android:lineSpacingMultiplier="1.2"/>

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_xl"
                android:layout_marginBottom="@dimen/spacing_lg">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1"
                    android:background="@color/divider_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếp tục với"
                    android:textSize="@dimen/text_sm"
                    android:textColor="?android:attr/textColorSecondary"
                    android:paddingHorizontal="@dimen/spacing_md"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1"
                    android:background="@color/divider_light"/>
            </LinearLayout>

            <!-- Google Sign In Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Google"
                android:textSize="@dimen/text_base"
                android:textAllCaps="false"
                app:icon="@drawable/ic_google"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_md"
                app:cornerRadius="@dimen/button_corner_radius"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Info Text -->
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bằng cách đăng nhập, bạn đồng ý với Điều khoản sử dụng và Chính sách bảo mật của chúng tôi"
                android:textSize="@dimen/text_xs"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/spacing_lg"
                android:textColor="?android:attr/textColorSecondary"
                android:lineSpacingMultiplier="1.3"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressIndicator"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>