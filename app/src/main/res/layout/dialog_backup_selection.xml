<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sao lÆ°u lÃªn Drive"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"/>
        </LinearLayout>

        <!-- Selection Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSelectAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Chá»n táº¥t cáº£"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnDeselectAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bá» chá»n"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
        </LinearLayout>

        <!-- Selection Items -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Manga -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <CheckBox
                        android:id="@+id/cbManga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“š Truyá»‡n (Manga)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:id="@+id/tvMangaCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 truyá»‡n"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"/>

                <!-- Chapters -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <CheckBox
                        android:id="@+id/cbChapters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“– Chapters"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:id="@+id/tvChaptersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Táº¥t cáº£ chapters"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"/>

                <!-- Pages -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <CheckBox
                        android:id="@+id/cbPages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“„ Pages (Bao gá»“m báº£n dá»‹ch)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:id="@+id/tvPagesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Táº¥t cáº£ pages"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"/>

                <!-- History -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <CheckBox
                        android:id="@+id/cbHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ•’ Lá»‹ch sá»­ dá»‹ch"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:id="@+id/tvHistoryCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 lá»‹ch sá»­"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"/>

                <!-- Albums -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <CheckBox
                        android:id="@+id/cbAlbums"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ Albums"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:id="@+id/tvAlbumsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Táº¥t cáº£ albums"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvEstimatedSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Æ¯á»›c tÃ­nh: 0 MB"
                    android:textSize="14sp"
                    android:textColor="#1976D2"
                    android:textStyle="bold"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:max="100"/>

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Äang xá»­ lÃ½..."
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="gone"
            android:textColor="?android:attr/textColorSecondary"/>

        <!-- Action Button -->
        <Button
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sao lÆ°u"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>